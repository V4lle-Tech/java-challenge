# EditorConfig ayuda a mantener estilos de código consistentes
# https://editorconfig.org

root = true

# Configuración para todos los archivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Archivos Java
[*.java]
indent_style = space
indent_size = 4
max_line_length = 120

# Archivos de configuración
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Archivos XML (incluyendo pom.xml)
[*.xml]
indent_style = space
indent_size = 2

# Gradle files
[*.gradle]
indent_style = space
indent_size = 4

[*.gradle.kts]
indent_style = space
indent_size = 4

# Properties files
[*.properties]
indent_style = space
indent_size = 2

# Scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
